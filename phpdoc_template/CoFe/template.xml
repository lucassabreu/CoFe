    <transformation query="//package/@full_name" writer="xsl" source="templates/CoFe/packages.xsl" artifact="packages/{$full_name}"/>
    <transformation query="//class/full_name|//interface/full_name" writer="xsl" source="templates/CoFe/class.xsl" artifact="classes/{$full_name}"/>
